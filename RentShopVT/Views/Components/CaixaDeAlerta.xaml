<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="RentShopVT.Views.Components.CaixaDeAlerta"
    >
    <Frame BackgroundColor="White" Padding="20" WidthRequest="300" HeightRequest="200" Margin="0" BorderColor="White" HasShadow="False">
    <VerticalStackLayout BackgroundColor="White" Padding="20" WidthRequest="300" HeightRequest="200">
        <Label x:Name="MessageLabel" Text="Mensagem personalizada!" TextColor="Black" FontSize="18" HorizontalOptions="Center"  FontAttributes="Bold" Margin="0,10"/>
        <Label x:Name="MessageLabel2" Text="Mensagem personalizada!" TextColor="Black" FontSize="18" HorizontalOptions="Center" Margin="0,10" />
        <Button Text="OK" BackgroundColor="Blue" TextColor="White" x:Name="FecharPopup" Clicked="FecharPopup_Clicked" Margin="0,10"/>
    </VerticalStackLayout>
    </Frame>
</toolkit:Popup>