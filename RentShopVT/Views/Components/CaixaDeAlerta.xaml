<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="RentShopVT.Views.Components.CaixaDeAlerta">

    <VerticalStackLayout BackgroundColor="White" Padding="20" WidthRequest="300">
        <Label x:Name="MessageLabel" Text="Mensagem personalizada!" TextColor="Black" FontSize="18" HorizontalOptions="Center" />
        <Button Text="OK" BackgroundColor="Blue" TextColor="White" x:Name="FecharPopup" Clicked="FecharPopup_Clicked"/>
    </VerticalStackLayout>
</toolkit:Popup>