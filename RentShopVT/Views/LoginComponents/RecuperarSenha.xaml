<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentShopVT.Views.LoginComponents.RecuperarSenha"
             xmlns:vm="clr-namespace:RentShopVT.ViewModels"
             Title="RecuperarSenha"
             BackgroundColor="#E2FDFF">
    
    <ContentPage.BindingContext>
        <vm:RecuperaSenhaViewModel />
    </ContentPage.BindingContext>
    
    <VerticalStackLayout>
        <FlexLayout JustifyContent="Start" AlignContent="Center"  BackgroundColor="#3D4DDE" HeightRequest="60" >

            <ImageButton 
                    x:Name="VoltarLogin"
                    Clicked="VoltarLogin_Clicked"
                    Source="arrowleft.svg"
                    WidthRequest="35"
                    Margin="5,9,0,0"
                    CornerRadius="30"
                    BackgroundColor="#E2FDFF"
                    Padding="2"
                    VerticalOptions="Center"
                    HeightRequest="35"
                   >
            </ImageButton>
                    <Label
                   Text="Recuperar Senha"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="20"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   Margin="5,0,0,0"
                   />
        </FlexLayout>
        
        <ScrollView VerticalOptions="StartAndExpand">

            <Frame Margin="30,30" BackgroundColor="#BFD7FF" Padding="15" CornerRadius="20" BorderColor="#BFD7FF" HasShadow="True">

                <StackLayout>
                
                <Label Text="Digite Email para Recuperação:" FontSize="15" FontAttributes="Bold"></Label>

                <Frame CornerRadius="5" HeightRequest="40" BackgroundColor="White" Padding="2" BorderColor="White" Margin="0,20,0,20">

                        <Entry HeightRequest="60" Placeholder="Insira  o Email" TextColor="#3D4DDE" Keyboard="Email" x:Name="EmailEntry" Text="{Binding Email}" >
                    </Entry>
                    
                </Frame>

                <Button Text="Enviar" HorizontalOptions="FillAndExpand" BackgroundColor="#3D4DDE" Command="{Binding EnviarCommand}"></Button>

                <VerticalStackLayout IsVisible="False">

                        <Label Text="Digite o Token Enviado para:" FontSize="15" FontAttributes="Bold" Margin="0,10,0,0" TextColor="Black"></Label>
                        <Label Text="gustavo.ferreira32@gmail.com" FontSize="14" FontAttributes="Bold" Margin="0,10,0,10" HorizontalTextAlignment="Center" TextColor="Black"></Label>
                    <Frame CornerRadius="5" HeightRequest="40" BackgroundColor="White" Padding="2" BorderColor="White" Margin="0,0,0,20">
                        <Entry HeightRequest="60" Placeholder="Insira o Token" TextColor="#3D4DDE" IsPassword="False" Keyboard="Text" >
                        </Entry>
                    </Frame>
                    <Button Text="Enviar" HorizontalOptions="FillAndExpand" BackgroundColor="#3D4DDE"></Button>

                    <VerticalStackLayout IsVisible="False">

                            <Label Text="Digite uma Nova Senha" FontSize="15" FontAttributes="Bold" Margin="0,10,0,10" TextColor="Black"></Label>
                        <Frame CornerRadius="5" HeightRequest="40" BackgroundColor="White" Padding="2" BorderColor="White" Margin="0,0,0,20">
                            <Entry HeightRequest="60" Placeholder="Insira uma Nova Senha" TextColor="#3D4DDE" IsPassword="True" Keyboard="Default" >
                            </Entry>
                        </Frame>

                            <Label Text="Repita a Senha" FontSize="15" FontAttributes="Bold" Margin="0,0,0,10" TextColor="Black"></Label>
                        <Frame CornerRadius="5" HeightRequest="40" BackgroundColor="White" Padding="2" BorderColor="White" Margin="0,0,0,20">
                            <Entry HeightRequest="60" Placeholder="Repita a Senha" TextColor="#3D4DDE" IsPassword="True" Keyboard="Default" >
                            </Entry>
                        </Frame>

                        <Button Text="Enviar" HorizontalOptions="FillAndExpand" BackgroundColor="#3D4DDE"></Button>

                    </VerticalStackLayout>

                </VerticalStackLayout>
                    
                </StackLayout>
            </Frame>
            
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>